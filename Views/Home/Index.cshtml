@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - С# Quiz</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Custom CSS -->
    <style>
        /* Ensure full-screen height */
        html, body {
            height: 100%;
        }

        /* Set carousel height */
        .carousel-item img {
            object-fit: cover;
            height: 80vh; /* Adjust as needed */
            width: 100%;
        }
    </style>
</head>
<body>
<div class="container">
    <main role="main" class="pb-3">
        @model  SharpQuiz.Domain.Entity.Clause
        <script type="text/javascript">
            function toggle_visibility(id) {
                var e = document.getElementById(id);
                if(e.style.display === 'none')
                    e.style.display = 'block';
            }
        </script>
        
        <div class="px-4 py-5 my-5 text-left">
            <div class="col-lg-6 mx-auto">
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3" onclick="location.href='@Url.Action("Index", "Home", new RouteValueDictionary(new { id = @Model.Id }))'">Следующий вопрос</button>
                </div>
                <br/>
                <p class="lead mb-4">@Model.Question</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3" onclick="toggle_visibility('id_of_element_to_toggle');">Показать ответ</button>
                </div>
                <br/>
                <div id="id_of_element_to_toggle" style="display: none">
                    <p class="lead mb-4">@Html.Raw(@Model.Answer)</p>
                    <br/>
                    <pre><code class="language-csharp" id="codeBlock">@Html.Raw(@Model.FullAnswer)</code></pre>
                    <script>
                        // Initialize highlight.js after the document has loaded
                        document.addEventListener('DOMContentLoaded', (event) => {
                            hljs.highlightElement(document.getElementById('codeBlock'));
                        });
                    </script>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
