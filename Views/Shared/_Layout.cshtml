<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - С# Quiz</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Custom CSS -->
    <style>
        /* Ensure full-screen height */
        html, body {
            height: 100%;
        }

        /* Set carousel height */
        .carousel-item img {
            object-fit: cover;
            height: 80vh; /* Adjust as needed */
            width: 100%;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" >
        <div class="container">
            <a class="navbar-brand" asp-controller="Book" asp-action="Index">C#</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" style="color: black" asp-area="" asp-controller="Book" asp-action="Index">Курс</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: black" asp-area="" asp-controller="Chapter" asp-action="Index">Раздел</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: black" asp-area="" asp-controller="Clause" asp-action="Index">Вопрос</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link bi bi-rocket-takeoff" style="color: black" asp-area="" asp-controller="Home" asp-action="Index"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bi bi-box-arrow-right" style="color: black"  href="../logout"></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
